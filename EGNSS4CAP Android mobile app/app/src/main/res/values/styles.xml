<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">#f6f6f6</item>
    </style>

    <style name="ThemeToolbar" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="android:textColorSecondary">#FFFFFF</item>
        <item name="android:itemBackground">@color/mainSecondary</item>
        <item name="android:fontFamily">@font/akrobat_family</item>
        <item name="android:textFontWeight">700</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/akrobat_family</item>
        <item name="android:textFontWeight">900</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="backgroundStyle">
        <item name="android:elevation">5dp</item>
    </style>

    <style name="button">
        <item name="android:elevation">5dp</item>
    </style>

    <style name="textButton">
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:background">@drawable/background_button_blue</item>
    </style>

    <style name="panel_old">
        <item name="android:background">@drawable/background_section_secondary</item>
        <item name="android:elevation">5dp</item>
    </style>

    <style name="panelTitle_old">
        <item name="android:textColor">#000000</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">#E1E1E1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="panelContent">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>


    <style name="textBase">
        <item name="android:textColor">@color/textNormal</item>
        <item name="android:fontFamily">@font/roboto_family</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="textNormal" parent="textBase">
        <item name="android:textColor">@color/textNormal</item>
    </style>
    <style name="textBold" parent="textBase">
        <item name="android:textColor">@color/textBold</item>
    </style>
    <style name="textRed" parent="textBase">
        <item name="android:textColor">@color/textRed</item>
    </style>
    <style name="textBlue" parent="textBase">
        <item name="android:textColor">@color/textBlue</item>
    </style>

    <style name="widgetTextBase" parent="textBase">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="editText" parent="widgetTextBase">
        <item name="android:background">@drawable/background_text_edit_gray</item>
        <item name="android:textColor">@color/textBold</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="buttonTextBase" parent="widgetTextBase">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textBold</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    <style name="buttonTextGreen" parent="buttonTextBase">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/background_button_green</item>
    </style>
    <style name="buttonTextGray" parent="buttonTextBase">
        <item name="android:background">@drawable/background_button_gray</item>
    </style>
    <style name="buttonTextWhite" parent="buttonTextBase">
        <item name="android:background">@drawable/background_button_white</item>
    </style>
    <style name="buttonTextWhiteGreen" parent="buttonTextBase">
        <item name="android:textColor">@color/mainPrimary</item>
        <item name="android:background">@drawable/background_button_white_green</item>
    </style>
    
    <style name="buttonImage">
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/background_button_white</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="checkBox" parent="@android:style/Widget.Material.Light.CompoundButton.CheckBox">
        <item name="android:buttonTint">@color/mainPrimary</item>
        <item name="android:fontFamily">@font/roboto_family</item>
        <item name="android:textColor">@color/textBold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="radioButton" parent="@android:style/Widget.Material.Light.CompoundButton.RadioButton">
        <item name="android:buttonTint">@color/mainPrimary</item>
        <item name="android:fontFamily">@font/roboto_family</item>
        <item name="android:textColor">@color/textBold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="seekBarVertical" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressTint">@color/mainPrimary</item>
        <item name="android:thumb">@drawable/seek_thumb_vertical</item>
    </style>
    <style name="seekBarHorizontal" parent="Widget.AppCompat.SeekBar">
        <item name="android:paddingStart">18dp</item>
        <item name="android:paddingEnd">18dp</item>
        <item name="android:progressDrawable">@drawable/seek_progress</item>
        <item name="android:thumb">@drawable/switch_seek_thumb</item>
    </style>

    <style name="switcher" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:track">@drawable/switch_states</item>
        <item name="android:thumb">@drawable/switch_seek_thumb</item>
        <item name="android:padding">0dp</item>
        <item name="android:switchPadding">0dp</item>
        <item name="android:switchStyle">@color/textSettingsSub</item>
    </style>

    <style name="panel">
        <item name="android:background">@drawable/background_panel</item>
        <item name="android:padding">16dp</item>
    </style>
    <style name="panelTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/akrobat_family</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/mainPrimary</item>
        <item name="android:textSize">22sp</item>
    </style>
    <style name="panelIcon">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">@null</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>
    <style name="panelHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    <style name="panelRow">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="panelValueStart" parent="textNormal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">@null</item>
        <item name="android:maxWidth">250dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="panelValueMiddle" parent="textNormal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text"></item>
        <item name="android:background">@drawable/value_padding</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>
    <style name="panelValueEnd" parent="textBold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">@null</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="panelMin" parent="panel">
        <item name="android:background">@drawable/background_panel_min</item>
        <item name="android:padding">12dp</item>
    </style>
    <style name="panelRowMin" parent="panelRow">
        <item name="android:layout_marginTop">3dp</item>
    </style>
    <style name="panelRowFirstMin" parent="panelRow">
        <item name="android:layout_marginTop">0dp</item>
    </style>
    <style name="panelValueStartMin" parent="panelValueStart">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="panelValueEndMin" parent="panelValueEnd">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="sheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>

    <style name="filterLabel" parent="textBold">
        <item name="android:textFontWeight">700</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="taskPanelTitle" parent="textNormal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="taskPanelText" parent="textBold">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>
    
    <style name="taskPhotoNavigationButton" parent="widgetTextBase">
        <item name="android:fontFamily">@font/roboto_family</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/mainPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="se_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/item_bottom_line</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="se_itemCustom" parent="se_item">
        <item name="android:padding">@dimen/gn_screenMargin</item>
    </style>
    <style name="se_content">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/gn_screenMargin</item>
        <item name="android:paddingTop">@dimen/gn_screenMargin</item>
        <item name="android:paddingBottom">@dimen/gn_screenMargin</item>
    </style>
    <style name="se_switch" parent="switcher">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingTop">@dimen/gn_screenMargin</item>
        <item name="android:paddingBottom">@dimen/gn_screenMargin</item>
    </style>
    <style name="se_icon">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>
    <style name="se_text" parent="textBase">
        <item name="android:textColor">@color/textBold</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="se_textSub" parent="textBase">
        <item name="android:textColor">@color/textSettingsSub</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="se_switch_devider">
        <item name="android:src">@drawable/setting_switch_divider</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">40dp</item>
    </style>
    <style name="se_countValue" parent="se_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="se_seekBar" parent="seekBarHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="gnss_satsPanel" parent="panelMin">
        <item name="android:background">@drawable/background_panel_min_gray</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="gnss_satsPanelTitle" parent="textBold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="gnss_satsList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>

